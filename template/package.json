{
  "name": "{{ name }}",
  "version": "1.0.0",
  "description": "{{ description }}",
  "author": "{{ author }}",
  "private": true,
  "scripts": {
    "serve": "live-server --open=public --port=8080",
    "watch:js": "rollup -c -w",
    "build:autoprefixer": "postcss --use autoprefixer -o public/assets/css/app.css public/assets/css/app.css",
    "build:cssnano": "cssnano public/assets/css/app.css public/assets/css/app.css",
    "build": "npm-run-all --parallel build:autoprefixer build:cssnano",
    "dev": "npm-run-all --parallel serve watch:js"
  },
  "dependencies": {
    "vue": "^2.0.1"
  },
  "devDependencies": {
    "live-server": "^1.1.0",
    "npm-run-all": "^3.1.0",
    "rollup": "^0.36.1",
    "rollup-plugin-buble": "^0.14.0",
    "rollup-plugin-commonjs": "^5.0.4",
    "rollup-plugin-node-globals": "^1.0.9",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-plugin-vue": "^2.2.5",
    "uglify-js": "^2.7.3",
    "rollup-watch": "^2.5.0",
    "autoprefixer": "^6.4.1",
    "cssnano-cli": "^1.0.4",
    "postcss-cli": "^2.6.0"
  }
}
